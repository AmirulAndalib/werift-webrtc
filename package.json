{
  "name": "werift",
  "version": "0.0.8",
  "homepage": "https://github.com/shinyoshiaki/rainy-webrtc",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinyoshiaki/rainy-webrtc.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "answer": "ts-node --files examples/datachannel/answer.ts",
    "build": "rm -rf lib && tsc",
    "deploy": "./build.sh && yarn publish",
    "format": "prettier --write src/**/*.ts",
    "offer": "ts-node --files examples/datachannel/offer.ts",
    "publish": "npm publish --access=public",
    "test": "npm run type && jest --runInBand --forceExit",
    "type": "tsc --noEmit --project ./tsconfig.json",
    "unused": "organize-imports-cli src/**/*.ts"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "aes-js": "^3.1.2",
    "big-integer": "^1.6.48",
    "binary-data": "^0.6.0",
    "buffer-crc32": "^0.2.13",
    "date-fns": "^2.15.0",
    "elliptic": "^6.5.3",
    "int64-buffer": "^0.99.1007",
    "ip": "^1.1.5",
    "jspack": "^0.0.4",
    "lodash": "^4.17.19",
    "p-cancelable": "^2.0.0",
    "rx.mini": "^0.1.1",
    "turbo-crc32": "^1.0.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/aes-js": "^3.1.1",
    "@types/big-integer": "^0.0.31",
    "@types/buffer-crc32": "^0.2.0",
    "@types/elliptic": "^6.4.12",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.5",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.23",
    "@types/node-forge": "^0.9.4",
    "@types/socket.io-client": "^1.4.33",
    "@types/utf8": "^2.1.6",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.6",
    "jest": "^26.1.0",
    "organize-imports-cli": "^0.7.0",
    "prettier": "^2.0.5",
    "python-shell": "^2.0.1",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0-beta",
    "ws": "^7.3.1"
  }
