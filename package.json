{
  "name": "rainy-webrtc",
  "version": "0.0.2",
  "homepage": "https://github.com/shinyoshiaki/rainy-webrtc",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinyoshiaki/rainy-webrtc.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "answer": "ts-node --files examples/datachannel/answer.ts",
    "build": "rm -rf lib && tsc",
    "ci": "jest --runInBand --forceExit",
    "format": "prettier --write src/**/*.ts",
    "offer": "ts-node --files examples/datachannel/offer.ts",
    "deploy": "yarn format && yarn test && yarn build",
    "publish": "npm publish --access=public",
    "test": "npm run type && jest --runInBand --forceExit",
    "type": "tsc --noEmit --project ./tsconfig.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "binary-data": "^0.6.0",
    "buffer-crc32": "^0.2.13",
    "dgram": "^1.0.1",
    "elliptic": "^6.5.2",
    "int64-buffer": "^0.99.1007",
    "ip": "^1.1.5",
    "jspack": "^0.0.4",
    "lodash": "^4.17.15",
    "p-cancelable": "^2.0.0",
    "rxjs": "^6.5.5",
    "turbo-crc32": "^1.0.1"
  },
  "devDependencies": {
    "@types/buffer-crc32": "^0.2.0",
    "@types/elliptic": "^6.4.12",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^14.0.13",
    "@types/node-forge": "^0.9.4",
    "@types/socket.io-client": "^1.4.33",
    "@types/utf8": "^2.1.6",
    "@types/ws": "^7.2.5",
    "jest": "^26.0.0",
    "prettier": "^2.0.5",
    "python-shell": "^2.0.1",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5",
    "ws": "^7.3.0"
  }
}
